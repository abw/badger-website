{
  "env": {
    "browser": true,
      "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react-refresh"
  ],
  "ignorePatterns": ["scaffold/**/*"],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "offsetTernaryExpressions": true,
        "SwitchCase": 1
      }

    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "react/prop-types": 0,
    "semi": [
      "error",
      "never"
    ],
    "react-refresh/only-export-components": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
